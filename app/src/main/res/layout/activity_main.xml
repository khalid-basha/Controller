<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/IndigoDye"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/editButton"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#222D3E"
        android:fontFamily="sans-serif-medium"
        android:isScrollContainer="false"
        android:saveEnabled="false"
        android:selectAllOnFocus="false"
        android:shadowColor="@color/jet"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="Edit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        app:cornerRadius="@android:dimen/thumbnail_height"
        app:icon="@drawable/edit_40px"
        app:iconGravity="textStart"
        app:iconPadding="7dp"
        app:iconSize="24dp"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:rippleColor="#FFFFFF" />

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/Gainsboro"
        app:layout_constraintBottom_toTopOf="@+id/editButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fr" />

    <FrameLayout
        android:id="@+id/fr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:background="@color/IndigoDye"
            android:contentDescription="@string/appbar_scrolling_view_behavior">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/IndigoDye">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/white"
                        android:shadowDx="3"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="Lights Color"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/lColor"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView10" />

                    <TextView
                        android:id="@+id/lColor"
                        android:layout_width="105dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/ming"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="Red"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView15"
                        app:layout_constraintTop_toBottomOf="@+id/sSize" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/white"
                        android:shadowDx="3"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="Step Size"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/sSize"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <TextView
                        android:id="@+id/sSize"
                        android:layout_width="105dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/ming"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="2"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView10"
                        app:layout_constraintTop_toBottomOf="@+id/accError" />

                    <TextView
                        android:id="@+id/actTemp"
                        android:layout_width="105dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/ming"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="34.00 C"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView3"
                        app:layout_constraintTop_toBottomOf="@+id/sTemp" />

                    <TextView
                        android:id="@+id/sTemp"
                        android:layout_width="105dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="45dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/ming"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="35.00 C"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/actTemp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/accError"
                        android:layout_width="105dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/ming"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="1.5"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView5"
                        app:layout_constraintTop_toBottomOf="@+id/actTemp" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/white"
                        android:shadowDx="3"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="Actual Temperature"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/actTemp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/white"
                        android:shadowDx="3"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="Accepted Error"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/accError"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="45dp"
                        android:autoText="false"
                        android:contextClickable="false"
                        android:elegantTextHeight="false"
                        android:fontFamily="sans-serif-medium"
                        android:freezesText="false"
                        android:gravity="center"
                        android:shadowColor="@color/white"
                        android:shadowDx="3"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:text="Selected Temperature"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toTopOf="@+id/textView3"
                        app:layout_constraintEnd_toStartOf="@+id/sTemp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="textView,sTemp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </ScrollView>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>